<!-- Blog Section Begin -->
<section class="from-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title from-blog__title">
                    <h2>From The Blog</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (Blog item in Model.Blogs)
            {
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic">
                            <img src="~/img/blog/@item.ImageURL" alt="">
                        </div>
                        <div class="blog__item__text">
                            <ul>
                                <li><i class="fa fa-calendar-o"></i> @item.ReleaseDate.ToString("dd MMMM, yyyy")</li>
                                <li><i class="fa fa-comment-o"></i> @item.ReplyCount</li>
                            </ul>
                            <h5><a href="#">@item.Title</a></h5>
                            <p>@item.Description </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Blog Section End -->